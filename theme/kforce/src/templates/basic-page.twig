{% extends 'dist/templates/base.twig' %}
{% set pageclasses = pageclasses ~ ' main-page' %}
{% block supercontent %}

<header class="site-header">

    <div class="brand-container">
        <div class="big-container">
            <a href="{{ paths.root }}"><img class="big-logo" src="img/kforce-logo.svg" alt="K Force Logo" data-alternate="img/kforce-logo.png"/></a>
            <div class="logo-text-container left">
                <div class="big-text">K Force</div>
                <div class="stripe"></div>
            </div>
            <div class="logo-text-container right">
                <div class="big-text">Robotics</div>
                <div class="stripe"></div>
                <div class="small-text">Team 2919</div>
            </div>
        </div>
    </div>

    <div class="nav-placeholder">
        <div class="nav-container">
            <div class="content-wrapper">
                <a class="logo-container" href="{{ paths.root }}"><img class="logo" src="img/kforce-logo.svg" alt="K Force Logo" data-alternate="img/kforce-logo.png"/></a>
                <nav class="site-nav">{{ menu('main', 'dist/templates/_site_nav.twig') }}</nav>
                <div class="menu-button"></div>
            </div>
        </div>
    </div>
</header>
{% block content %}

{% endblock %}
<footer class="site-footer">
    <div class="content-wrapper">
        <img class="background-cog" src="img/cog-footer.svg" alt="Background Cog" data-alternate="img/cog-footer.png"/>
        <div class="sponsor-message">
            A very special thanks to our <a href="{{ paths.root }}{{ theme.sponsors_page }}">sponsors</a>.
        </div>
        <div class="friends">
            <h3>Some of our friends</h3>
            <p>
                <a href="{{ theme.kiwibots }}">Kiwibots</a>
                <a href="{{ theme.vex }}">VEX Robotics</a>
                <a href="{{ theme.kristin }}">Kristin School</a>
            </p>
        </div>
        <div class="logo-links">
            <a href="{{ theme.kristin }}" class="kristin-logo">
                <img src="img/kristin-logo-footer.svg" alt="Kristin School Logo" data-alternate="img/kristin-logo-footer.png"/>
            </a>
            <div class="small-logo-links">
                <a href="{{ theme.facebook }}" class="logo-link fb"></a>
                <a href="{{ theme.twitter }}" class="logo-link twit"></a>
                <a href="{{ theme.github }}" class="logo-link github"></a>
                <a href="{{ theme.youtube }}" class="logo-link yt"></a>
            </div>
        </div>
        <p class="copyright">Copyright &copy; K Force Robotics 2015</p>
    </div>
</footer>

{% endblock %}
